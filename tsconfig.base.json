{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/src/*"],
      "@sdk": ["packages/sdk/src"],
      "@types/*": ["packages/types/src/*"],
      "@utils/*": ["packages/utils/src/*"],
      "@configs/*": ["packages/configs/*"]
    }
  }
}
